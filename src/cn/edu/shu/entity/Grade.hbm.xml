<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="cn.edu.shu.entity.Grade" table="t_grade">
        <id name="gradeId" type="int">
            <column name="grade_id"/>
            <!--字段赋值方式-->
            <generator class="increment"/>
        </id>
        <property name="gradeName" type="java.lang.String">
            <column name="grade_name"/>
        </property>
        <property name="gradeDesc" type="java.lang.String">
            <column name="grade_desc"/>
        </property>
        <!--一对多-->
        <!--inverse="true"由多方来维护，性能更好-->
        <set name="students" table="t_student">
            <key column="grade_id"/>
            <one-to-many class="cn.edu.shu.entity.Student"/>
        </set>
    </class>
</hibernate-mapping>
